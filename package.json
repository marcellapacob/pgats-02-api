{
  "name": "pgats-02-api",
  "version": "1.0.0",
  "description": "API para registro, login, consulta de usuários e transferências, com testes REST e GraphQL.",
  "main": "app.js",
  "type": "commonjs",
  "scripts": {
    "start-rest": "node server.js",
    "start-graphql": "node graphql/server.js",
    "start": "node server.js & node graphql/server.js",
    "test": "mocha 'test/**/*.test.js' --timeout 10000 --reporter mochawesome",
    "test-controller": "mocha 'test/controller/**/*.test.js' --timeout 10000 --reporter mochawesome",
    "test-external": "mocha 'test/external/**/*.test.js' --timeout 10000 --reporter mochawesome",
    "test-rest-controller": "mocha 'test/rest/controller/**/*.test.js' --timeout 10000 --reporter mochawesome",
    "test-rest-external": "mocha 'test/rest/external/**/*.test.js' --timeout 10000 --reporter mochawesome",
    "test-rest": "npm run test-rest-external && npm run test-rest-controller",
    "test-graphql-external": "mocha 'test/graphql/external/**/*.test.js' --timeout 10000 --reporter mochawesome"
  },
  "dependencies": {
    "apollo-server-express": "^3.13.0",
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.2.2",
    "express": "^4.17.1",
    "graphql": "^16.11.0",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "chai": "^4.5.0",
    "chai-exclude": "^2.1.1",
    "jsonwebtoken": "^9.0.2",
    "mocha": "^11.7.2",
    "mochawesome": "^7.1.3",
    "sinon": "^21.0.0",
    "supertest": "^7.1.4",
    "wait-on": "^9.0.1"
  }
}